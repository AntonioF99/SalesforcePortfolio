<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <description>Automatically calculates Invoice Total Amount when Subtotal or Tax Rate changes</description>
    <label>Invoice Total Calculation</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>176</locationX>
        <locationY>0</locationY>
        <object>Invoice__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
    <variables>
        <description>The invoice record being processed</description>
        <name>triggerInvoice</name>
        <dataType>SObject</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
        <objectType>Invoice__c</objectType>
    </variables>
    <formulas>
        <description>Calculate tax amount from subtotal and tax rate</description>
        <name>CalculatedTaxAmount</name>
        <dataType>Currency</dataType>
        <expression>IF(
    AND(
        NOT(ISNULL({!triggerInvoice.Subtotal__c})),
        NOT(ISNULL({!triggerInvoice.Tax_Rate__c}))
    ),
    {!triggerInvoice.Subtotal__c} * ({!triggerInvoice.Tax_Rate__c} / 100),
    0
)</expression>
    </formulas>
    <formulas>
        <description>Calculate total amount including tax</description>
        <name>CalculatedTotalAmount</name>
        <dataType>Currency</dataType>
        <expression>IF(
    NOT(ISNULL({!triggerInvoice.Subtotal__c})),
    {!triggerInvoice.Subtotal__c} + {!CalculatedTaxAmount},
    0
)</expression>
    </formulas>
    <assignments>
        <description>Update calculated fields on the invoice</description>
        <name>Update_Calculated_Fields</name>
        <label>Update Calculated Fields</label>
        <locationX>176</locationX>
        <locationY>158</locationY>
        <assignmentItems>
            <assignToReference>triggerInvoice.Tax_Amount__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>CalculatedTaxAmount</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>triggerInvoice.Total_Amount__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>CalculatedTotalAmount</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>triggerInvoice.Balance_Due__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>CalculatedTotalAmount</elementReference>
            </value>
        </assignmentItems>
    </assignments>
    <decisions>
        <description>Only calculate if subtotal exists</description>
        <name>Has_Subtotal</name>
        <label>Has Subtotal?</label>
        <locationX>176</locationX>
        <locationY>79</locationY>
        <defaultConnectorLabel>No Subtotal</defaultConnectorLabel>
        <rules>
            <name>Subtotal_Exists</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>triggerInvoice.Subtotal__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Calculated_Fields</targetReference>
            </connector>
            <label>Has Subtotal</label>
        </rules>
    </decisions>
</Flow>