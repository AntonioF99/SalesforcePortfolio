<?xml version="1.0" encoding="UTF-8" ?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cannot_Delete_After_Invoice_Sent</fullName>
    <active>false</active>
    <description
  >Prevents deleting line items after invoice has been sent to customer</description>
    <errorConditionFormula>OR(
    ISPICKVAL(Invoice__r.Status__c, &apos;Sent&apos;),
    ISPICKVAL(Invoice__r.Status__c, &apos;Paid&apos;),
    ISPICKVAL(Invoice__r.Status__c, &apos;Overdue&apos;),
    ISPICKVAL(Invoice__r.Status__c, &apos;Voided&apos;)
)</errorConditionFormula>
    <errorMessage
  >Cannot delete line items after invoice has been sent. Void the invoice if needed.</errorMessage>
</ValidationRule>
